@page "/login"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject NavigationManager NavManager
@inject ProtectedSessionStorage MySession
@using DBL
@using Models

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: radial-gradient(circle at 20% 20%, #0c0f24, #02030a 80%);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        overflow: hidden;
        perspective: 1400px;
    }

        body::before {
            content: "";
            position: absolute;
            width: 200%;
            height: 200%;
            background: conic-gradient(from 120deg, #00bfff33, #ff00ff22, #00ffcc33, #00bfff33);
            filter: blur(160px);
            animation: auroraSpin 25s linear infinite;
            z-index: 0;
        }

    @@keyframes auroraSpin {
        0%

    {
        transform: rotate(0deg) scale(1);
    }

    100% {
        transform: rotate(360deg) scale(1);
    }

    }

    .floating-orb {
        position: absolute;
        width: 450px;
        height: 450px;
        background: radial-gradient(circle, #00eaff44, transparent 70%);
        border-radius: 50%;
        filter: blur(90px);
        animation: orbFloat 12s ease-in-out infinite;
        z-index: 0;
    }

    @@keyframes orbFloat {
        0%

    {
        transform: translate(-180px, -140px) scale(1);
    }

    50% {
        transform: translate(160px, 120px) scale(1.25);
    }

    100% {
        transform: translate(-180px, -140px) scale(1);
    }

    }

    .login-container {
        position: relative;
        z-index: 3;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(25px);
        border-radius: 22px;
        padding: 55px 45px;
        width: 400px;
        text-align: center;
        box-shadow: 0 0 55px rgba(0, 255, 255, 0.25);
        transform-style: preserve-3d;
        animation: holoPop 1.5s cubic-bezier(.19,1,.22,1);
    }

    @@keyframes holoPop {
        0%

    {
        opacity: 0;
        transform: translateY(40px) rotateX(35deg);
    }

    100% {
        opacity: 1;
        transform: translateY(0) rotateX(0deg);
    }

    }

    .login-container::before {
        content: "";
        position: absolute;
        width: 180%;
        height: 180%;
        top: -40%;
        left: -40%;
        background: radial-gradient(circle, rgba(0,255,255,0.1), transparent 70%);
        animation: holoSweep 18s linear infinite;
        pointer-events: none;
        border-radius: 50%;
    }

    @@keyframes holoSweep {
        from

    {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }

    }

    .aurora-title {
        font-size: 2.8em;
        background: linear-gradient(90deg, #00bfff, #00ffcc, #33ffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 900;
        letter-spacing: 3px;
        text-shadow: 0 0 25px #00eaff55;
        animation: titleGlow 4s ease-in-out infinite alternate;
    }

    @@keyframes titleGlow {
        0%

    {
        filter: drop-shadow(0 0 6px #00d9ff55);
    }

    100% {
        filter: drop-shadow(0 0 22px #00ffffaa);
    }

    }

    .login-subtitle {
        font-size: 1em;
        color: #b9cce8;
        margin-bottom: 35px;
    }

    .login-input {
        width: 100%;
        padding: 12px;
        margin-bottom: 20px;
        border: none;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.12);
        color: #fff;
        outline: none;
        font-size: 1.05em;
        transition: 0.25s ease;
        backdrop-filter: blur(6px);
    }

        .login-input:focus {
            background: rgba(255, 255, 255, 0.25);
            box-shadow: 0 0 15px #00ffff77;
            transform: scale(1.03);
        }

    .login-btn {
        width: 100%;
        padding: 14px;
        margin-top: 10px;
        border: none;
        border-radius: 14px;
        background: linear-gradient(120deg, #00bfff, #00ffcc, #33ffff);
        background-size: 250%;
        color: #09121e;
        font-weight: 800;
        font-size: 1.1em;
        cursor: pointer;
        transition: 0.3s ease;
        box-shadow: 0 0 25px #00ffff66;
    }

        .login-btn:hover {
            transform: scale(1.07) translateY(-3px);
            background-position: 100%;
            box-shadow: 0 0 40px #00ffffaa;
        }

    .login-links {
        margin-top: 28px;
        font-size: 0.92em;
        color: #a8d9ff;
    }

        .login-links a {
            color: #7df9ff;
            text-decoration: none;
            font-weight: 600;
            transition: 0.25s;
        }

            .login-links a:hover {
                text-shadow: 0 0 10px #00ffff;
                letter-spacing: 1px;
            }

    .error-msg {
        color: #ff7070;
        margin-top: 18px;
        font-size: 0.92em;
        animation: errShake 0.35s ease;
    }

    @@keyframes errShake {
        0%

    {
        transform: translateX(0);
    }

    25% {
        transform: translateX(-6px);
    }

    50% {
        transform: translateX(6px);
    }

    75% {
        transform: translateX(-6px);
    }

    100% {
        transform: translateX(0);
    }

    }

    .star {
        position: absolute;
        width: 2px;
        height: 2px;
        background: white;
        border-radius: 50%;
        opacity: 0.4;
        animation: starDrift 9s linear infinite;
    }

    @@keyframes starDrift {
        from

    {
        transform: translateY(-10vh);
    }

    to {
        transform: translateY(120vh);
    }

    }
</style>

<div class="floating-orb"></div>

<div class="login-container">
    <h1 class="aurora-title">Aurora</h1>
    <p class="login-subtitle">Enter the cosmic gateway</p>

    <input type="text" placeholder="Username" class="login-input" @bind="username" />
    <input type="password" placeholder="Password" class="login-input" @bind="password" />

    <button class="login-btn" @onclick="Login">Login</button>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="error-msg">@errorMessage</p>
    }

    <div class="login-links">
        <a href="/createaccount">Create Account</a>
        <span> • </span>
        <a href="/forgotpassword">Forgot Password</a>
    </div>
</div>

<script>
    for (let i = 0; i < 40; i++)
    {
        const s = document.createElement("div");
        s.classList.add("star");
        s.style.left = Math.random() * 100 + "%";
        s.style.animationDuration = 4 + Math.random() * 8 + "s";
        document.body.appendChild(s);
    }
</script>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string errorMessage = string.Empty;

    private async Task Login()
    {
        try
        {
            ListenerDB db = new ListenerDB();
            Listener listener = await db.GetListenerByLoginAsync(username, password);

            if (listener != null)
            {
                await MySession.SetAsync("user", listener);
                NavManager.NavigateTo("/");
            }
            else
            {
                errorMessage = "Invalid username or password.";
            }
        }
        catch
        {
            errorMessage = "Something went wrong. Try again.";
        }
    }
}
