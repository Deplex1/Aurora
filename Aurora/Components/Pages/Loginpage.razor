@page "/login"
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject NavigationManager NavManager
@inject ProtectedSessionStorage MySession
@inject IJSRuntime JS

@using DBL
@using Models

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: radial-gradient(circle at 20% 20%, #141831, #080a14 80%);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        overflow: hidden;
    }

        body::before {
            content: "";
            position: absolute;
            width: 160%;
            height: 160%;
            background: linear-gradient(60deg, #00bfff33, #ff00ff22, #00ffcc33);
            filter: blur(120px);
            animation: auroraFlow 18s ease-in-out infinite alternate;
            z-index: 0;
        }

    @@keyframes auroraFlow {
        0% {
            transform: translate(-10%, -10%) rotate(0deg);
        }

        100% {
            transform: translate(10%, 10%) rotate(360deg);
        }
    }

    .login-container {
        position: relative;
        z-index: 2;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(25px);
        border-radius: 20px;
        padding: 50px 40px;
        width: 380px;
        text-align: center;
        box-shadow: 0 0 40px rgba(0, 255, 255, 0.2);
        animation: fadeIn 1s ease-out forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .aurora-title {
        font-size: 2.4em;
        background: linear-gradient(90deg, #00bfff, #00ffcc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
        margin-bottom: 8px;
        letter-spacing: 2px;
    }

    .login-subtitle {
        font-size: 0.95em;
        color: #b7c8d9;
        margin-bottom: 35px;
    }

    .login-input {
        width: 100%;
        padding: 12px;
        margin-bottom: 18px;
        border: none;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
        outline: none;
        font-size: 1em;
        transition: 0.3s;
    }

        .login-input:focus {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 10px #00ffff66;
        }

    .login-btn {
        width: 100%;
        padding: 13px;
        margin-top: 5px;
        border: none;
        border-radius: 12px;
        background: linear-gradient(90deg, #00bfff, #00ffcc);
        color: #0d0f1c;
        font-weight: 700;
        letter-spacing: 0.5px;
        font-size: 1.05em;
        cursor: pointer;
        transition: 0.3s;
    }

        .login-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px #00ffff88;
        }

    .login-links {
        margin-top: 25px;
        font-size: 0.9em;
        color: #aad9ff;
    }

        .login-links a {
            color: #6eefff;
            text-decoration: none;
            font-weight: 500;
            transition: 0.3s;
        }

            .login-links a:hover {
                text-shadow: 0 0 8px #00ffff;
            }

    .error-msg {
        color: #ff6b6b;
        margin-top: 15px;
        font-size: 0.9em;
        animation: shake 0.3s ease;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-6px);
        }

        75% {
            transform: translateX(6px);
        }
    }
</style>

<div class="login-container">
    <h1 class="aurora-title">Aurora</h1>
    <p class="login-subtitle">Welcome back to the soundverse</p>

    <input type="text" placeholder="Username" class="login-input" @bind="username" />
    <input type="password" placeholder="Password" class="login-input" @bind="password" />

    <button class="login-btn" @onclick="Login">Login</button>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="error-msg">@errorMessage</p>
    }

    <div class="login-links">
        <a href="/createaccount">Create Account</a>
        <span> • </span>
        <a href="/forgotpassword">Forgot Password?</a>
    </div>
</div>

@code {
    private string username = string.Empty; 
    private string password = string.Empty;
    private string errorMessage = string.Empty;

    private async Task Login()
    {
        try
        {
            ListenerDB db = new ListenerDB();
            Listener? listener = await db.GetListenerByLoginAsync(username, password);

            if (listener != null)
            {
                await MySession.SetAsync("user", listener);
                NavManager.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Something went wrong. Please try again.";
            Console.WriteLine(ex.Message);
        }
    }
}
