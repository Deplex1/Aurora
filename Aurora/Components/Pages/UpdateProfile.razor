@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject NavigationManager NavManager
@inject ProtectedSessionStorage MySession

@using DBL
@using Models

@page "/updateprofile"

<style>
    body {
        margin: 0;
        padding: 0;
        background: radial-gradient(circle at 20% 20%, #11172d, #070913 80%);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #fff;
        font-family: 'Segoe UI', sans-serif;
        overflow: hidden;
    }

        body::before {
            content: "";
            position: absolute;
            width: 150%;
            height: 150%;
            background: linear-gradient(60deg, #00bfff33, #ff00ff22, #00ffcc33);
            filter: blur(100px);
            animation: auroraFlow 20s infinite alternate ease-in-out;
            z-index: 0;
        }

    @@keyframes auroraFlow {
        0% {
            transform: translate(-10%, -10%) rotate(0deg);
        }

        100% {
            transform: translate(10%, 10%) rotate(360deg);
        }
    }

    .update-container {
        position: relative;
        z-index: 2;
        text-align: center;
    }

    .update-box {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        padding: 50px;
        width: 400px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.3);
        animation: fadeIn 1s ease-out forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .profile-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #00eaff;
        margin-bottom: 15px;
        box-shadow: 0 0 20px #00ffff66;
    }

    .file-upload {
        margin-bottom: 20px;
    }

    .input-field {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        outline: none;
        transition: 0.3s;
    }

        .input-field:focus {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 8px #00ffff55;
        }

    .save-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(90deg, #00bfff, #00ffcc);
        color: #111;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .save-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px #00ffff88;
        }

    .back-btn {
        margin-top: 20px;
        color: #77eaff;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
    }

        .back-btn:hover {
            text-shadow: 0 0 10px #00ffff;
        }
</style>

@if (!isLoaded)
{
    <p>Loading your profile...</p>
}
else if (listener != null)
{
    <div class="update-container">
    <div class="update-box">
        <h2>Update Profile</h2>

        @if (listener != null)
        {
            <!-- Profile Picture Preview -->
            <img src="@listener.pfpLink" class="profile-pic" alt="Profile Picture" />

            <InputFile OnChange="OnFileSelected" class="file-upload" />

            <button class="save-btn" @onclick="UpdateProfilePicture">Update Profile Picture</button>

            <hr style="margin: 25px 0; opacity: 0.2;" />

            <input type="password" placeholder="Current Password" @bind="currentPassword" class="input-field" />
            <input type="password" placeholder="New Password" @bind="newPassword" class="input-field" />
            <input type="password" placeholder="Confirm New Password" @bind="confirmPassword" class="input-field" />

            <button class="save-btn" @onclick="ChangePassword">Change Password</button>

            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <p style="color: #00eaff; margin-top: 15px;">@statusMessage</p>
            }

            <a href="/" class="back-btn">← Back to Home</a>
        }
        else
        {
            <p>Loading your profile...</p>
        }
    </div>
</div>
}




@code {

    private Listener? listener;
    private byte[]? uploadedImageBytes;
    private string profilePictureNEW = string.Empty;

    private string currentPassword = string.Empty;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private string statusMessage = string.Empty;

    private bool isLoaded = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var result = await MySession.GetAsync<Listener>("user");
            if (result.Success)
            {
                listener = new Listener(result.Value);
            }
            else
            {
                NavManager.NavigateTo("/login");
            }

            isLoaded = true;
            StateHasChanged();
        }
    }


    // Handles file upload
    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 10_000_000);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            uploadedImageBytes = memoryStream.ToArray();

            string base64Image = Convert.ToBase64String(uploadedImageBytes);
            profilePictureNEW = $"data:image/png;base64,{base64Image}";

            try
            {
                ListenerDB db = new ListenerDB();

                await db.UpdateProfilePictureAsync(listener.userID, uploadedImageBytes);
                Console.WriteLine("Profile picture updated successfully!");
                listener.pfpLink = profilePictureNEW;
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error updating profile picture: {ex.Message}");
            }
        }
    }


    // Updates profile picture in DB
    private async Task UpdateProfilePicture()
    {
        if (listener == null || uploadedImageBytes == null)
        {
            statusMessage = "Please select a picture first.";
            return;
        }

        try
        {
            ListenerDB db = new ListenerDB();
            int rows = await db.UpdateProfilePictureAsync(listener.userID, uploadedImageBytes);

            if (rows > 0)
            {
                statusMessage = "Profile picture updated successfully";
                await MySession.SetAsync("user", listener);
            }
            else
            {
                statusMessage = "Failed to update profile picture.";
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
        }
    }

    // Changes password in DB
    private async Task ChangePassword()
    {
        if (listener == null)
            return;

        if (string.IsNullOrWhiteSpace(currentPassword) ||
            string.IsNullOrWhiteSpace(newPassword) ||
            string.IsNullOrWhiteSpace(confirmPassword))
        {
            statusMessage = "Please fill all password fields.";
            return;
        }

        if (newPassword != confirmPassword)
        {
            statusMessage = "Passwords do not match.";
            return;
        }

        try
        {
            ListenerDB db = new ListenerDB();

            var loginCheck = await db.GetListenerByLoginAsync(listener.username, currentPassword);
            if (loginCheck == null)
            {
                statusMessage = "Current password is incorrect.";
                return;
            }

            int rows = await db.UpdateAsync(listener, newPassword);

            if (rows > 0)
            {
                statusMessage = "Password updated successfully!";
            }
            else
            {
                statusMessage = "Password update failed.";
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
        }
    }
}

