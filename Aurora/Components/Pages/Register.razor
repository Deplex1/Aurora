@page "/createaccount"

@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject NavigationManager NavManager
@inject ProtectedSessionStorage MySession

@using DBL
@using Models

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: radial-gradient(circle at 20% 20%, #151a2f, #090b16 70%);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        body::before {
            content: "";
            position: absolute;
            width: 150%;
            height: 150%;
            top: -25%;
            left: -25%;
            background: linear-gradient(60deg, #00bfff33, #ff00ff22, #00ffcc33);
            filter: blur(120px);
            animation: auroraFlow 15s ease-in-out infinite alternate;
            z-index: 0;
        }

    @@keyframes auroraFlow {
        0% {
            transform: translate(-10%, -10%) rotate(0deg);
        }

        100% {
            transform: translate(10%, 10%) rotate(360deg);
        }
    }

    .register-container {
        position: relative;
        z-index: 2;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(25px);
        border-radius: 20px;
        padding: 40px;
        width: 380px;
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.25);
        text-align: center;
        animation: fadeIn 1s ease forwards;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .aurora-title {
        color: #b3e8ff;
        font-size: 2.3em;
        margin-bottom: 10px;
        letter-spacing: 2px;
        text-shadow: 0 0 15px #00ffff55;
    }

    .login-subtitle {
        color: #aaa;
        margin-bottom: 30px;
        font-size: 1.1em;
    }

    .register-input {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: none;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        outline: none;
        transition: 0.3s;
    }

        .register-input:focus {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 10px #00ffff55;
        }

    .login-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(90deg, #00bfff, #00ffcc);
        color: #0d0f1c;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        font-size: 1.05em;
    }

        .login-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 0 20px #00ffff88;
        }

    .login-links {
        margin-top: 25px;
        font-size: 0.9em;
        color: #aaa;
    }

        .login-links a {
            color: #77eaff;
            text-decoration: none;
            transition: 0.3s;
        }

            .login-links a:hover {
                text-shadow: 0 0 10px #00ffff;
            }

    .error-msg {
        color: #ff6b6b;
        margin-top: 15px;
        font-size: 0.9em;
        animation: shake 0.3s ease;
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }
    }
</style>

<div class="register-container">
    <h1 class="aurora-title">Aurora</h1>
    <p class="login-subtitle">Create your account</p>

    <input type="text" placeholder="Username" class="register-input" @bind="username" />
    <input type="email" placeholder="Email" class="register-input" @bind="email" />
    <input type="password" placeholder="Password" class="register-input" @bind="password" />

    <button class="login-btn" @onclick="RegisterListener">Register</button>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="error-msg">@errorMessage</p>
    }

    <div class="login-links">
        <span>Already have an account?</span>
        <a href="/login"> Log in</a>
    </div>
</div>

@code {
    string username = string.Empty;
    string email = string.Empty;
    string password = string.Empty;
    string errorMessage = string.Empty;

    public async Task RegisterListener()
    {
        try
        {
            ListenerDB db = new ListenerDB();
            Listener? listener = await db.InsertGetObjAsync(new Listener(this.username, this.email), this.password);
            if (listener != null)
            {
                await MySession.SetAsync("user", listener);
                NavManager.NavigateTo("/", forceLoad: true);
            }
            else
            {
                errorMessage = "Something went wrong, try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }
}
