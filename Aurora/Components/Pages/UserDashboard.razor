<div class="modal-overlay @(showCreatePlaylistModal ? "active" : "")" @onclick="HideCreatePlaylistModal">
    <div class="modal-content" @onclick:stopPropagation>
        <div class="modal-title">Create New Playlist</div>

        <input
            type="text"
            placeholder="Playlist Name"
            class="modal-input"
            @bind="newPlaylistName" />

        <input
            type="text"
            placeholder="Description (optional)"
            class="modal-input"
            @bind="newPlaylistDescription" />

        <div class="modal-actions">
            <button class="modal-btn secondary" @onclick="HideCreatePlaylistModal">Cancel</button>
            <button class="modal-btn primary" @onclick="CreatePlaylist" disabled="@string.IsNullOrWhiteSpace(newPlaylistName)">
                Create Playlist
            </button>
        </div>
    </div>
</div>
