    .sidebar {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .recent-activity {
        background: var(--glass-bg);
        backdrop-filter: blur(25px);
        border: 1px solid var(--glass-border);
        border-radius: 25px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .activity-title {
        font-size: 18px;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 20px;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
    }

    .activity-item {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 15px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--primary-cyan), var(--primary-blue));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
    }

    .activity-content {
        flex: 1;
    }

    .activity-text {
        font-size: 14px;
        color: #ffffff;
        margin-bottom: 4px;
    }

    .activity-time {
        font-size: 12px;
        color: rgba(255, 255, 255, 0.6);
    }

    /* Create Playlist Modal */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease;
    }

    .modal-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .modal-content {
        background: var(--glass-bg);
        backdrop-filter: blur(30px);
        border: 1px solid var(--glass-border);
        border-radius: 25px;
        padding: 40px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
        transform: scale(0.9) translateY(20px);
        transition: all 0.3s ease;
    }

    .modal-overlay.active .modal-content {
        transform: scale(1) translateY(0);
    }

    .modal-title {
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
        text-align: center;
        margin-bottom: 30px;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
    }

    .modal-input {
        width: 100%;
        padding: 15px 18px;
        border-radius: 15px;
        border: 1px solid var(--glass-border);
        background: rgba(255, 255, 255, 0.05);
        color: #ffffff;
        font-size: 16px;
        backdrop-filter: blur(15px);
        margin-bottom: 20px;
        transition: all 0.3s ease;
        font-family: 'Orbitron', monospace;
    }

    .modal-input:focus {
        outline: none;
        border-color: var(--primary-cyan);
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .modal-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .modal-btn {
        padding: 12px 30px;
        border-radius: 15px;
        border: none;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .modal-btn.primary {
        background: linear-gradient(135deg, var(--primary-cyan), var(--primary-purple));
        color: var(--dark-space);
        box-shadow: 0 4px 15px rgba(0, 255, 255, 0.3);
    }

    .modal-btn.primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 255, 255, 0.5);
    }

    .modal-btn.secondary {
        background: transparent;
        color: #ffffff;
        border: 1px solid var(--glass-border);
    }

    .modal-btn.secondary:hover {
        border-color: var(--primary-cyan);
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    /* Mobile Responsive */
    @@media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .dashboard-header {
            flex-direction: column;
            gap: 20px;
            padding: 20px;
        }

        .user-info {
            flex-direction: column;
            text-align: center;
            gap: 15px;
        }

        .header-actions {
            width: 100%;
            justify-content: center;
        }

        .stats-section {
            grid-template-columns: repeat(2, 1fr);
        }

        .playlists-grid {
            grid-template-columns: 1fr;
        }

        .modal-content {
            padding: 30px 20px;
        }
    }

    /* Loading States */
    .loading {
        text-align: center;
        color: var(--primary-cyan);
        font-size: 16px;
        padding: 40px;
        text-shadow: 0 0 15px rgba(0, 255, 255, 0.6);
    }

    .skeleton {
        background: linear-gradient(90deg, rgba(255, 255, 255, 0.1) 25%, rgba(255, 255, 255, 0.05) 50%, rgba(255, 255, 255, 0.1) 75%);
        background-size: 200% 100%;
        animation: loading 1.5s infinite;
        border-radius: 8px;
    }

    @@keyframes loading {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }
</style>

@code {
    private Listener currentUser;
    private List<dynamic> userPlaylists = new List<dynamic>(); // Will be replaced with actual Playlist model
    private bool isLoading = true;
    private bool showCreatePlaylistModal = false;
    private string newPlaylistName = "";
    private string newPlaylistDescription = "";

    protected override async Task OnInitializedAsync()
    {
        // Initialize without JavaScript interop
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if user is logged in (safe to do JavaScript interop here)
            var userResult = await MySession.GetAsync<Listener>("user");
            if (!userResult.Success || userResult.Value == null)
            {
                NavManager.NavigateTo("/");
                return;
            }

            currentUser = userResult.Value;
            await LoadUserData();
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadUserData()
    {
        isLoading = true;

        try
        {
            // Check if user is authenticated
            if (currentUser == null)
            {
                Console.WriteLine("Warning: currentUser is null in LoadUserData");
                return;
            }

            // Load user's playlists (placeholder for now)
            userPlaylists = new List<dynamic>
            {
                new { Name = "My Favorites", SongCount = 12, CreatedDate = DateTime.Now.AddDays(-30) },
                new { Name = "Chill Vibes", SongCount = 8, CreatedDate = DateTime.Now.AddDays(-15) },
                new { Name = "Workout Mix", SongCount = 15, CreatedDate = DateTime.Now.AddDays(-7) }
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task Logout()
    {
        await MySession.DeleteAsync("user");
        NavManager.NavigateTo("/");
    }

    private void NavigateToSongs()
    {
        NavManager.NavigateTo("/songs");
    }

    private void ShowCreatePlaylistModal()
    {
        showCreatePlaylistModal = true;
        newPlaylistName = "";
        newPlaylistDescription = "";
    }

    private void HideCreatePlaylistModal()
    {
        showCreatePlaylistModal = false;
    }

    private async Task CreatePlaylist()
    {
        if (string.IsNullOrWhiteSpace(newPlaylistName))
        {
            return;
        }

        // TODO: Implement actual playlist creation
        // For now, just add to the placeholder list
        userPlaylists.Add(new
        {
            Name = newPlaylistName,
            SongCount = 0,
            CreatedDate = DateTime.Now
        });

        HideCreatePlaylistModal();
        await InvokeAsync(StateHasChanged);
    }

    private void NavigateToPlaylist(dynamic playlist)
    {
        // TODO: Navigate to specific playlist page
        Console.WriteLine($"Navigate to playlist: {playlist.Name}");
    }

    private string GetInitials()
    {
        if (string.IsNullOrWhiteSpace(currentUser?.username))
            return "?";

        var parts = currentUser.username.Split(' ');
        if (parts.Length >= 2)
        {
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        }
        return currentUser.username.Substring(0, Math.Min(2, currentUser.username.Length)).ToUpper();
    }
}

