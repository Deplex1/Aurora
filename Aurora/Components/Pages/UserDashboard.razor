    /* Quantum Field Background */
    body::before {
        content: "";
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background:
            radial-gradient(circle at 20% 30%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(128, 0, 255, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 40% 10%, rgba(255, 0, 128, 0.06) 0%, transparent 50%);
        animation: quantumShift 20s ease-in-out infinite;
        z-index: 0;
        filter: blur(100px);
    }

    @@keyframes quantumShift {
        0% { transform: rotate(0deg) scale(1); }
        25% { transform: rotate(90deg) scale(1.1); }
        50% { transform: rotate(180deg) scale(0.9); }
        75% { transform: rotate(270deg) scale(1.05); }
        100% { transform: rotate(360deg) scale(1); }
    }

    /* Holographic Grid */
    body::after {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
            linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        animation: gridFlow 30s linear infinite;
        z-index: 1;
    }

    @@keyframes gridFlow {
        0% { transform: translate(0, 0); }
        100% { transform: translate(50px, 50px); }
    }

    /* Data Streams */
    .data-stream {
        position: fixed;
        width: 2px;
        height: 100px;
        background: linear-gradient(to bottom, transparent, var(--primary-cyan), transparent);
        opacity: 0.6;
        animation: streamFlow 8s linear infinite;
        z-index: 2;
    }

    @@keyframes streamFlow {
        0% { transform: translateY(-100px); opacity: 0; }
        10% { opacity: 0.8; }
        90% { opacity: 0.8; }
        100% { transform: translateY(100vh); opacity: 0; }
    }

    .dashboard-container {
        position: relative;
        z-index: 10;
        width: 100%;
        min-height: 100vh;
        padding: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Holographic Header */
    .dashboard-header {
        width: 100%;
        max-width: 1400px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
        padding: 25px 40px;
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 25px;
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

    .dashboard-header::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(
            from 0deg,
            rgba(0, 255, 255, 0.1),
            rgba(0, 128, 255, 0.1),
            rgba(128, 0, 255, 0.1),
            rgba(255, 0, 128, 0.1),
            rgba(0, 255, 255, 0.1)
        );
        animation: hologramScan 8s linear infinite;
    }

    @@keyframes hologramScan {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 20px;
        position: relative;
        z-index: 2;
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-cyan), var(--primary-purple));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: bold;
        color: var(--dark-space);
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    .user-details h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
    }

    .user-details p {
        margin: 4px 0 0 0;
        color: var(--primary-cyan);
        font-size: 14px;
        opacity: 0.8;
    }

    .header-actions {
        display: flex;
        gap: 20px;
        position: relative;
        z-index: 2;
    }

    .action-btn {
        padding: 12px 24px;
        border-radius: 15px;
        border: 1px solid var(--glass-border);
        background: var(--glass-bg);
        color: #ffffff;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .action-btn::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg,
            transparent,
            rgba(0, 255, 255, 0.4),
            rgba(128, 0, 255, 0.4),
            transparent
        );
        transition: left 0.6s ease;
    }

    .action-btn:hover {
        transform: translateY(-3px) scale(1.05);
        border-color: var(--primary-cyan);
        box-shadow:
            0 8px 30px rgba(128, 0, 255, 0.5),
            0 0 40px rgba(0, 255, 255, 0.3);
    }

    .action-btn:hover::before {
        left: 100%;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 40px;
        width: 100%;
        max-width: 1400px;
        margin-bottom: 40px;
    }

    .main-content {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    /* Quantum Stats Cards */
    .stats-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        transition: all 0.4s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0, 255, 255, 0.2);
        border-color: var(--primary-cyan);
    }

    .stat-number {
        font-size: 36px;
        font-weight: 900;
        color: var(--primary-cyan);
        margin-bottom: 10px;
        text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    }

    .stat-label {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Playlists Section */
    .playlists-section {
        background: var(--glass-bg);
        backdrop-filter: blur(25px);
        border: 1px solid var(--glass-border);
        border-radius: 25px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .section-title {
        font-size: 24px;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 25px;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .section-title::before {
        content: "‚ö°";
        color: var(--primary-cyan);
        text-shadow: 0 0 15px rgba(0, 255, 255, 0.6);
    }

    .playlists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .playlist-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .playlist-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, transparent, rgba(0, 255, 255, 0.1), transparent);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .playlist-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 255, 255, 0.2);
        border-color: var(--primary-cyan);
    }

    .playlist-card:hover::before {
        opacity: 1;
    }

    .playlist-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--primary-cyan), var(--primary-purple));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-bottom: 15px;
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    .playlist-name {
        font-size: 18px;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 8px;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }

    .playlist-meta {
        font-size: 12px;
        color: rgba(255, 255, 255, 0.6);
        display: flex;
        justify-content: space-between;
    }

