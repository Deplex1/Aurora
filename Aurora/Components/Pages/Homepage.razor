@page "/"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject NavigationManager NavManager
@inject ProtectedSessionStorage MySession

<!-- Global full CSS in same file, no external dependencies -->
<style>

    body
    {
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        font-family: "Segoe UI", sans-serif;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        background: #0a0f24;
        overflow-x: hidden;
    }

    body::before
    {
        content: "";
        position: fixed;
        width: 250vw;
        height: 250vh;
        top: -60%;
        left: -60%;
        background: conic-gradient(
            from 90deg,
            rgba(74,200,255,0.25),
            rgba(168,85,255,0.2),
            rgba(0,255,170,0.25),
            rgba(74,200,255,0.25)
        );
        filter: blur(180px);
        animation: galaxyRotate 40s infinite linear;
        z-index: 0;
    }

    @keyframes galaxyRotate
    {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Main wrapper, prevents Blazor from breaking body */
    .page-root
    {
        position: relative;
        z-index: 2;
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .home-container
    {
        width: 90%;
        max-width: 900px;
        margin-top: 60px;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .home-title
    {
        font-size: 42px;
        font-weight: 700;
        color: #c5f6ff;
        letter-spacing: 3px;
        margin-bottom: 10px;
        text-shadow: 0 0 20px rgba(0,255,255,0.3);
    }

    .search-box
    {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .search-bar
    {
        width: 100%;
        padding: 14px 18px;
        border-radius: 12px;
        border: none;
        outline: none;
        font-size: 18px;
        background: rgba(255,255,255,0.1);
        color: #fff;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 15px rgba(0,255,255,0.2);
        transition: 0.3s ease;
    }

    .search-bar:focus
    {
        background: rgba(255,255,255,0.18);
        box-shadow: 0 0 30px rgba(0,255,255,0.35);
        transform: scale(1.01);
    }

    .trending-placeholder
    {
        margin-top: 12px;
        font-size: 15px;
        color: rgba(197,246,255,0.5);
    }

    .section-card
    {
        background: rgba(255,255,255,0.05);
        border-radius: 18px;
        padding: 28px;
        backdrop-filter: blur(16px);
        box-shadow: 0 0 25px rgba(255,255,255,0.07);
        transform-style: preserve-3d;
        transition: 0.4s ease;
    }

    .section-card:hover
    {
        transform: perspective(700px) rotateX(4deg) rotateY(-2deg) translateY(-6px);
        box-shadow: 0 0 40px rgba(0,255,255,0.2);
    }

    .section-card-title
    {
        font-size: 24px;
        font-weight: 600;
        text-shadow: 0 0 10px rgba(0,255,255,0.2);
        margin-bottom: 3px;
        color: #38f3ff;
    }

    .section-card-text
    {
        font-size: 15px;
        margin-top: 8px;
        color: #b8d1d6;
    }

    .mp3-player-note
    {
        font-size: 14px;
        opacity: 0.5;
        margin-top: 15px;
    }

</style>
