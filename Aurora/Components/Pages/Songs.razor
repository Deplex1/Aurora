    private List<Song> songs = new List<Song>();
    private List<Song> filteredSongs = new List<Song>();
    private List<Genre> genres = new List<Genre>();
    private Dictionary<int, string> userNames = new Dictionary<int, string>(); // userid -> username
    private Dictionary<int, string> songArtists = new Dictionary<int, string>(); // songid -> artist names
    private string searchQuery = "";
    private IBrowserFile selectedFile;
    private string uploadTitle = "";
    private int uploadGenreId = 1;
    private bool isUploading = false;
    private string additionalArtists = ""; // Comma-separated usernames
    private string currentPlayingId = "";
    private bool isLoading = true;
    private Listener currentUser;

    protected override async Task OnInitializedAsync()
    {
        // Initialize data without JavaScript interop
        await LoadSongsAsync();
        await LoadGenresAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if user is logged in (safe to do JavaScript interop here)
            var userResult = await MySession.GetAsync<Listener>("user");
            if (!userResult.Success || userResult.Value == null)
            {
                NavManager.NavigateTo("/");
                return;
            }

            currentUser = userResult.Value;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadSongsAsync()
    {
        isLoading = true;
        songs = await songsDB.SelectAllAsync();
        filteredSongs = new List<Song>(songs);

        // Load user names for all songs
        await LoadUserNamesAsync();

        isLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadUserNamesAsync()
    {
        try
        {
            userNames.Clear();
            songArtists.Clear();

            // Get all unique user IDs from songs (uploaders)
            var userIds = songs.Select(s => s.UserId).Distinct().ToList();

            // Also get all artist IDs from song_artists table
            try
            {
                foreach (var song in songs)
                {
                    var songArtistIds = await songArtistsDB.GetSongArtistsAsync(song.SongId);
                    userIds.AddRange(songArtistIds);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading artist IDs: {ex.Message}");
            }

            userIds = userIds.Distinct().ToList();

            if (userIds.Any())
            {
                ListenerDB listenerDB = new ListenerDB();
                foreach (var userId in userIds)
                {
                    try
                    {
                        var user = await listenerDB.GetListenerByPkAsync(userId);
                        if (user != null)
                        {
                            userNames[userId] = user.username;
                        }
                    }
                    catch
                    {
                        // If user not found, use default name
                        userNames[userId] = $"User #{userId}";
                    }
                }
            }

            // Load artist names for all songs
            foreach (var song in songs)
            {
                try
                {
                    var artistNames = await GetArtistNamesAsync(song.SongId);
                    songArtists[song.SongId] = artistNames;
                }
                catch
                {
                    songArtists[song.SongId] = "Unknown Artist";
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user names: {ex.Message}");
        }
    }

    private async Task LoadGenresAsync()
    {
        genres = await genereDB.GetAllAsync();
        if (genres.Any() && uploadGenreId == 1)
        {
            uploadGenreId = genres.First().genreID;
        }
        await InvokeAsync(StateHasChanged);
    }

    private async Task SearchSongs()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            filteredSongs = new List<Song>(songs);
        }
        else
        {
            filteredSongs = await songsDB.SearchLikeAsync(searchQuery);
        }
        await InvokeAsync(StateHasChanged);
    }

    private async Task OnSearchInput(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? "";
        await SearchSongs();
    }

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
    }

    private async Task UploadSong()
    {
        if (selectedFile == null || string.IsNullOrWhiteSpace(uploadTitle) || currentUser == null)
        {
            return;
        }

        isUploading = true;

        try
        {
            // Create uploads directory if it doesn't exist
            var uploadsPath = Path.Combine("wwwroot", "uploads");
            Directory.CreateDirectory(uploadsPath);

            // Generate unique filename
            var fileExtension = Path.GetExtension(selectedFile.Name);
            var uniqueFileName = $"{Guid.NewGuid()}{fileExtension}";
            var filePath = Path.Combine(uploadsPath, uniqueFileName);

            // Save file
            await using var stream = selectedFile.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024); // 50MB limit
            await using var fileStream = new FileStream(filePath, FileMode.Create);
            await stream.CopyToAsync(fileStream);

            // Get duration (placeholder for now - you might want to extract from MP3 metadata)
            var duration = 180; // Default 3 minutes

            // Save to database
            var webPath = $"/uploads/{uniqueFileName}";
            var newSong = await songsDB.InsertSongAsync(uploadTitle, duration, webPath, currentUser.userid, uploadGenreId);

            // Add the uploader as the main artist in song_artists table
            await songArtistsDB.AddSongArtistAsync(newSong.SongId, currentUser.userid, "main");

            // Add additional artists if specified
            if (!string.IsNullOrWhiteSpace(additionalArtists))
            {
                var artistUsernames = additionalArtists.Split(',')
                    .Select(name => name.Trim())
                    .Where(name => !string.IsNullOrWhiteSpace(name))
                    .ToArray();

                foreach (var username in artistUsernames)
                {
                    try
                    {
                        // Find user by username
                        var artistUser = await FindUserByUsernameAsync(username);
                        if (artistUser != null && artistUser.userid != currentUser.userid)
                        {
                            // Add as featured artist
                            await songArtistsDB.AddSongArtistAsync(newSong.SongId, artistUser.userid, "featured");
                        }
                        else if (artistUser == null)
                        {
                            // User not found - could show warning in future
                            Console.WriteLine($"Artist '{username}' not found");
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error adding artist '{username}': {ex.Message}");
                    }
                }
            }

            // Reset form
            selectedFile = null;
            uploadTitle = "";
            uploadGenreId = genres.Any() ? genres.First().genreID : 1;
            additionalArtists = "";

            // Reload songs
            await LoadSongsAsync();
        }
        catch (Exception ex)
        {
            // Handle error - you might want to show an error message
            Console.WriteLine($"Upload failed: {ex.Message}");
        }
        finally
        {
            isUploading = false;
        }
    }

    private void PlaySong(string songId)
    {
        currentPlayingId = songId;
    }

    private string FormatDuration(int seconds)
    {
        var minutes = seconds / 60;
        var remainingSeconds = seconds % 60;
        return $"{minutes}:{remainingSeconds:D2}";
    }

    private async Task<string> GetArtistNamesAsync(int songId)
    {
        try
        {
            // Get all artists for this song from song_artists table
            var artistIds = await songArtistsDB.GetSongArtistsAsync(songId);

            // If no artists in song_artists table, try to migrate from old system
            if (artistIds.Count == 0)
            {
                var song = songs.FirstOrDefault(s => s.SongId == songId);
                if (song != null)
                {
                    // Add the uploader as main artist (migration from old system)
                    try
                    {
                        await songArtistsDB.AddSongArtistAsync(songId, song.UserId, "main");
                        artistIds.Add(song.UserId);
                    }
                    catch
                    {
                        // Artist might already exist, continue
                        artistIds = await songArtistsDB.GetSongArtistsAsync(songId);
                    }
                }
            }

            if (artistIds.Count == 0)
            {
                return "Unknown Artist";
            }

            // Convert user IDs to names
            var artistNames = new List<string>();
            foreach (var artistId in artistIds)
            {
                if (userNames.ContainsKey(artistId))
                {
                    artistNames.Add(userNames[artistId]);
                }
                else
                {
                    artistNames.Add($"User #{artistId}");
                }
            }

            return string.Join(", ", artistNames);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error getting artist names for song {songId}: {ex.Message}");
            return "Unknown Artist";
        }
    }

    private void NavigateHome()
    {
        NavManager.NavigateTo("/");
    }

    private async Task Logout()
    {
        await MySession.DeleteAsync("user");
        NavManager.NavigateTo("/");
    }

    private void TogglePlay()
    {
        // This will be handled by JavaScript
    }

    private async Task<Listener> FindUserByUsernameAsync(string username)
    {
        try
        {
            ListenerDB listenerDB = new ListenerDB();
            return await listenerDB.GetListenerByUsernameAsync(username);
        }
        catch
        {
            return null;
        }
    }

    private void ShowAddArtistModal(int songId)
    {
        // TODO: Implement add artist modal
        Console.WriteLine($"Show add artist modal for song {songId}");
    }

}

<div class="page-container">
    <div class="header">
        <div class="logo" @onclick="NavigateHome">Aurora</div>
        <div class="nav-buttons">
            <button class="nav-btn" @onclick="Logout">Logout</button>
        </div>
    </div>

    <div class="search-section">
        <div class="search-container">
            <input
                class="search-bar"
                placeholder="Search songs across the galaxy..."
                @bind="searchQuery"
                @oninput="OnSearchInput" />

            <svg class="search-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 21L16.5 16.5M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>

        <div class="subtitle">Most trending in the universe</div>
    </div>

    <div class="content-grid">
        <div class="songs-section">
            @if (isLoading)
            {
                <div class="loading">Loading cosmic tracks...</div>
            }
            else if (filteredSongs.Any())
            {
                <div class="songs-grid">
                    @foreach (var song in filteredSongs)
                    {
                        <div class="song-card @(currentPlayingId == song.SongId.ToString() ? "playing" : "")" @onclick="() => PlaySong(song.SongId.ToString())">
                            <div class="song-content">
                                <div class="song-header">
                                    <div>
                                        <div class="song-title">@song.Title</div>
                                        <div class="song-artist">
                                            @(songArtists.ContainsKey(song.SongId) ? songArtists[song.SongId] : "Loading...")
                                            @if (currentUser != null && song.UserId == currentUser.userid)
                                            {
                                                <button class="add-artist-btn" @onclick="() => ShowAddArtistModal(song.SongId)" title="Add Artist">+</button>
                                            }
                                        </div>
                                    </div>
                                    <button class="play-button @(currentPlayingId == song.SongId.ToString() ? "playing" : "")">▶</button>
                                </div>

                                <div class="song-meta">
                                    <div class="song-duration">@FormatDuration(song.Duration)</div>
                                    <div class="sound-wave">
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                        <div class="wave-bar"></div>
                                    </div>
                                </div>
                            </div>

                            @if (currentPlayingId == song.SongId.ToString())
                            {
                                <div class="audio-player show">
                                    <div class="audio-controls">
                                        <button class="audio-play-btn" @onclick="TogglePlay" data-song-id="@song.SongId">▶</button>
                                        <div class="audio-info">
                                            <div class="audio-title">@song.Title</div>
                                            <div class="audio-artist">@(songArtists.ContainsKey(song.SongId) ? songArtists[song.SongId] : "Loading...")</div>
                                        </div>
                                    </div>

                                    <div class="audio-timeline">
                                        <div class="timeline-container">
                                            <div class="timeline-progress" id="progress-@song.SongId">
                                                <div class="timeline-fill" id="fill-@song.SongId"></div>
                                            </div>
                                        </div>
                                        <div class="timeline-time">
                                            <span class="current-time" id="current-@song.SongId">0:00</span>
                                            <span class="total-time" id="total-@song.SongId">0:00</span>
                                        </div>
                                    </div>

                                    <audio id="audio-@song.SongId" preload="metadata" data-duration="@song.Duration" style="display: none;">
                                        <source src="@song.FilePath" type="audio/mpeg" />
                                        Your browser does not support the audio element.
                                    </audio>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-results">No songs found in this galaxy...</div>
            }
        </div>

        <div class="sidebar">
            <div class="upload-section">
                <div class="upload-title">Upload Your Cosmic Track</div>

                <div class="file-upload-container">
                    <div class="file-input-zone">
                        <div class="upload-icon">⬆</div>
                        <div class="upload-text">
                            <div class="upload-main-text">
                                @if (selectedFile != null)
                                {
                                    @selectedFile.Name
                                }
                                else
                                {
                                    @:Drop Your Track Here
                                }
                            </div>
                            <div class="upload-sub-text">
                                @if (selectedFile != null)
                                {
                                    @:File selected - Ready to upload!
                                }
                                else
                                {
                                    @:MP3 files only • Click or drag & drop
                                }
                            </div>
                        </div>
                        <InputFile
                            class="file-input"
                            OnChange="OnFileSelected"
                            accept=".mp3,audio/mpeg"
                            multiple="false" />
                    </div>
                </div>

                <div class="upload-form">
                    <input
                        class="upload-input"
                        placeholder="Song Title"
                        @bind="uploadTitle" />

                    <select
                        class="upload-input"
                        @bind="uploadGenreId">
                        @foreach (var genre in genres)
                        {
                            <option value="@genre.genreID">@genre.name</option>
                        }
                    </select>

                    <input
                        class="upload-input"
                        placeholder="Additional Artists (optional, comma-separated)"
                        @bind="additionalArtists" />

                    <div class="upload-help">
                        💡 Add other artists by username, separated by commas (optional)
                    </div>
                </div>

                <button
                    class="upload-button"
                    @onclick="UploadSong"
                    disabled="@(isUploading || selectedFile == null || string.IsNullOrWhiteSpace(uploadTitle))">
                    @(isUploading ? "Uploading..." : "Launch to Galaxy")
                </button>
            </div>
        </div>
    </div>
</div>
