@page "/songs"
@using DBL
@using Models
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using System.IO
@inject NavigationManager NavManager
@inject ProtectedSessionStorage MySession

<style>
    :root {
        --primary-cyan: #00ffff;
        --primary-blue: #0080ff;
        --primary-purple: #8000ff;
        --primary-pink: #ff0080;
        --secondary-green: #00ff80;
        --accent-orange: #ff8000;
        --dark-space: #0a0a0f;
        --deep-space: #050509;
        --glass-bg: rgba(255, 255, 255, 0.05);
        --glass-border: rgba(255, 255, 255, 0.1);
    }

    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: 'Orbitron', 'Segoe UI', monospace;
        background: var(--deep-space);
        overflow-x: hidden;
        min-height: 100vh;
        perspective: 1000px;
        cursor: none;
    }

    /* Custom Cursor */
    .cursor {
        position: fixed;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: radial-gradient(circle, var(--primary-cyan), transparent);
        pointer-events: none;
        z-index: 9999;
        mix-blend-mode: screen;
        transition: transform 0.1s ease;
    }

    .cursor.trail {
        width: 40px;
        height: 40px;
        opacity: 0.3;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.2); }
    }

    /* Quantum Field Background */
    body::before {
        content: "";
        position: fixed;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background:
            radial-gradient(circle at 20% 30%, rgba(0, 255, 255, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(128, 0, 255, 0.08) 0%, transparent 50%),
            radial-gradient(circle at 40% 10%, rgba(255, 0, 128, 0.06) 0%, transparent 50%);
        animation: quantumShift 20s ease-in-out infinite;
        z-index: 0;
        filter: blur(100px);
    }

    @@keyframes quantumShift {
        0% { transform: rotate(0deg) scale(1); }
        25% { transform: rotate(90deg) scale(1.1); }
        50% { transform: rotate(180deg) scale(0.9); }
        75% { transform: rotate(270deg) scale(1.05); }
        100% { transform: rotate(360deg) scale(1); }
    }

    /* Holographic Grid */
    body::after {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image:
            linear-gradient(rgba(0, 255, 255, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
        animation: gridFlow 30s linear infinite;
        z-index: 1;
    }

    @@keyframes gridFlow {
        0% { transform: translate(0, 0); }
        100% { transform: translate(50px, 50px); }
    }

    /* Data Streams */
    .data-stream {
        position: fixed;
        width: 2px;
        height: 100px;
        background: linear-gradient(to bottom, transparent, var(--primary-cyan), transparent);
        opacity: 0.6;
        animation: streamFlow 8s linear infinite;
        z-index: 2;
    }

    @@keyframes streamFlow {
        0% { transform: translateY(-100px); opacity: 0; }
        10% { opacity: 0.8; }
        90% { opacity: 0.8; }
        100% { transform: translateY(100vh); opacity: 0; }
    }

    /* Neural Network Interface */
    .neural-nodes {
        position: fixed;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 3;
    }

    .neural-node {
        position: absolute;
        width: 4px;
        height: 4px;
        background: var(--primary-cyan);
        border-radius: 50%;
        opacity: 0.7;
        animation: neuralPulse 3s ease-in-out infinite;
    }

    .neural-node::before {
        content: "";
        position: absolute;
        width: 20px;
        height: 1px;
        background: linear-gradient(90deg, var(--primary-cyan), transparent);
        transform-origin: left center;
        animation: neuralConnect 4s ease-in-out infinite;
    }

    @@keyframes neuralPulse {
        0%, 100% { transform: scale(1); opacity: 0.7; }
        50% { transform: scale(1.5); opacity: 1; }
    }

    @@keyframes neuralConnect {
        0%, 100% { transform: rotate(0deg) scaleX(0); }
        50% { transform: rotate(45deg) scaleX(1); }
    }

    .page-container {
        position: relative;
        z-index: 10;
        width: 100%;
        min-height: 100vh;
        padding: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        transform-style: preserve-3d;
    }

    /* Holographic Header */
    .header {
        width: 100%;
        max-width: 1400px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
        padding: 25px 40px;
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 25px;
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

    .header::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(
            from 0deg,
            transparent,
            rgba(0, 255, 255, 0.1),
            transparent,
            rgba(128, 0, 255, 0.1),
            transparent
        );
        animation: hologramScan 8s linear infinite;
    }

    @@keyframes hologramScan {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .logo {
        font-size: 36px;
        font-weight: 900;
        background: linear-gradient(45deg,
            var(--primary-cyan),
            var(--primary-blue),
            var(--primary-purple),
            var(--primary-pink)
        );
        background-size: 400% 400%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow:
            0 0 20px rgba(0, 255, 255, 0.5),
            0 0 40px rgba(0, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.4s ease;
        animation: logoGlow 3s ease-in-out infinite alternate;
        position: relative;
        z-index: 2;
    }

    @@keyframes logoGlow {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .logo:hover {
        transform: scale(1.1) rotateY(5deg);
        text-shadow:
            0 0 30px rgba(0, 255, 255, 0.8),
            0 0 60px rgba(0, 255, 255, 0.6),
            0 0 90px rgba(0, 255, 255, 0.4);
    }

    .nav-buttons {
        display: flex;
        gap: 20px;
        position: relative;
        z-index: 2;
    }

    .nav-btn {
        padding: 12px 24px;
        border-radius: 15px;
        border: 1px solid var(--glass-border);
        background: var(--glass-bg);
        color: #ffffff;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .nav-btn::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(0, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .nav-btn:hover {
        transform: translateY(-3px) scale(1.05);
        border-color: var(--primary-cyan);
        box-shadow:
            0 10px 30px rgba(0, 255, 255, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .nav-btn:hover::before {
        left: 100%;
    }

    /* Quantum Search Interface */
    .search-section {
        width: 100%;
        max-width: 900px;
        text-align: center;
        margin-bottom: 60px;
        position: relative;
    }

    .search-container {
        position: relative;
        margin-bottom: 30px;
    }

    .search-bar {
        width: 100%;
        padding: 20px 30px;
        border-radius: 50px;
        border: 2px solid var(--glass-border);
        outline: none;
        font-size: 18px;
        background: var(--glass-bg);
        color: #ffffff;
        backdrop-filter: blur(25px);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.1),
            0 0 0 1px rgba(255, 255, 255, 0.05);
        transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        position: relative;
        overflow: hidden;
        font-family: 'Orbitron', monospace;
    }

    .search-bar::before {
        content: "";
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: conic-gradient(
            from 0deg,
            var(--primary-cyan),
            var(--primary-blue),
            var(--primary-purple),
            var(--primary-pink),
            var(--primary-cyan)
        );
        border-radius: 50px;
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: -1;
    }

    .search-bar::placeholder {
        color: rgba(255, 255, 255, 0.5);
        font-style: italic;
    }

    .search-bar:focus {
        transform: scale(1.02);
        border-color: var(--primary-cyan);
        box-shadow:
            0 20px 60px rgba(0, 255, 255, 0.3),
            0 0 30px rgba(0, 255, 255, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .search-bar:focus::before {
        opacity: 0.3;
        animation: borderGlow 2s linear infinite;
    }

    @@keyframes borderGlow {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    /* Search Icon Animation */
    .search-icon {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        width: 24px;
        height: 24px;
        stroke: var(--primary-cyan);
        stroke-width: 2;
        fill: none;
        transition: all 0.3s ease;
    }

    .search-bar:focus + .search-icon {
        stroke: var(--secondary-green);
        animation: searchPulse 1.5s ease-in-out infinite;
    }

    @@keyframes searchPulse {
        0%, 100% { transform: translateY(-50%) scale(1); }
        50% { transform: translateY(-50%) scale(1.1); }
    }

    .subtitle {
        font-size: 14px;
        color: var(--primary-cyan);
        margin-top: 20px;
        font-weight: 300;
        text-shadow: 0 0 15px rgba(0, 255, 255, 0.6);
        letter-spacing: 2px;
        text-transform: uppercase;
        opacity: 0.8;
        animation: subtitleFloat 4s ease-in-out infinite;
    }

    @@keyframes subtitleFloat {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-5px); }
    }

    /* Holographic Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: 40px;
        width: 100%;
        max-width: 1400px;
        perspective: 2000px;
    }

    .songs-section {
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .songs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
        width: 100%;
    }

    /* Revolutionary Holographic Song Cards */
    .song-card {
        position: relative;
        background: var(--glass-bg);
        border-radius: 25px;
        padding: 30px;
        backdrop-filter: blur(30px);
        border: 1px solid var(--glass-border);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.05),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        cursor: pointer;
        overflow: hidden;
        transform-style: preserve-3d;
        min-height: 200px;
    }

    .song-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: conic-gradient(
            from 0deg,
            rgba(0, 255, 255, 0.1),
            rgba(0, 128, 255, 0.1),
            rgba(128, 0, 255, 0.1),
            rgba(255, 0, 128, 0.1),
            rgba(0, 255, 255, 0.1)
        );
        opacity: 0;
        transition: opacity 0.6s ease;
        animation: hologramRotate 12s linear infinite;
        z-index: 0;
    }

    @@keyframes hologramRotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .song-card::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            45deg,
            transparent 25%,
            rgba(0, 255, 255, 0.05) 25%,
            rgba(0, 255, 255, 0.05) 50%,
            transparent 50%
        );
        background-size: 20px 20px;
        opacity: 0;
        transition: opacity 0.4s ease;
        animation: dataFlow 8s linear infinite;
    }

    @@keyframes dataFlow {
        0% { background-position: 0 0; }
        100% { background-position: 20px 20px; }
    }

    .song-card:hover {
        transform: translateY(-15px) rotateX(10deg) rotateY(5deg) scale(1.02);
        box-shadow:
            0 25px 80px rgba(0, 0, 0, 0.4),
            0 0 60px rgba(0, 255, 255, 0.3),
            0 0 120px rgba(0, 128, 255, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
        border-color: var(--primary-cyan);
    }

    .song-card:hover::before {
        opacity: 0.8;
    }

    .song-card:hover::after {
        opacity: 0.6;
    }

    .song-content {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .song-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
    }

    .song-title {
        font-size: 20px;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 8px;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.4);
        line-height: 1.2;
        flex: 1;
    }

    .song-artist {
        font-size: 14px;
        color: var(--primary-cyan);
        margin-bottom: 15px;
        font-weight: 500;
        text-shadow: 0 0 10px rgba(0, 255, 255, 0.6);
        opacity: 0.9;
    }

    .song-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
    }

    .song-duration {
        font-size: 12px;
        color: rgba(255, 255, 255, 0.7);
        font-family: 'Orbitron', monospace;
        text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
    }

    /* Quantum Play Button */
    .play-button {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 2px solid var(--primary-cyan);
        background: radial-gradient(circle, rgba(0, 255, 255, 0.1), transparent);
        color: var(--primary-cyan);
        font-size: 18px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(10px);
        box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }

    .play-button::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        background: radial-gradient(circle, var(--primary-cyan), transparent);
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.4s ease;
    }

    .play-button:hover {
        transform: scale(1.1) rotate(5deg);
        border-color: var(--secondary-green);
        box-shadow: 0 0 40px rgba(0, 255, 255, 0.6), 0 0 80px rgba(0, 255, 80, 0.4);
        color: var(--secondary-green);
    }

    .play-button:hover::before {
        width: 120px;
        height: 120px;
    }

    .play-button.playing {
        border-color: var(--accent-orange);
        color: var(--accent-orange);
        animation: playingPulse 1.5s ease-in-out infinite;
    }

    @@keyframes playingPulse {
        0%, 100% { box-shadow: 0 0 20px rgba(255, 128, 0, 0.4); }
        50% { box-shadow: 0 0 40px rgba(255, 128, 0, 0.8), 0 0 80px rgba(255, 128, 0, 0.4); }
    }

    /* Sound Wave Visualization */
    .sound-wave {
        position: absolute;
        bottom: 20px;
        left: 20px;
        right: 20px;
        height: 40px;
        display: flex;
        align-items: center;
        gap: 2px;
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .song-card:hover .sound-wave {
        opacity: 0.8;
    }

    .wave-bar {
        width: 3px;
        background: var(--primary-cyan);
        border-radius: 2px;
        animation: waveIdle 2s ease-in-out infinite;
    }

    .wave-bar:nth-child(1) { animation-delay: 0s; height: 15px; }
    .wave-bar:nth-child(2) { animation-delay: 0.1s; height: 25px; }
    .wave-bar:nth-child(3) { animation-delay: 0.2s; height: 10px; }
    .wave-bar:nth-child(4) { animation-delay: 0.3s; height: 30px; }
    .wave-bar:nth-child(5) { animation-delay: 0.4s; height: 18px; }
    .wave-bar:nth-child(6) { animation-delay: 0.5s; height: 22px; }
    .wave-bar:nth-child(7) { animation-delay: 0.6s; height: 12px; }
    .wave-bar:nth-child(8) { animation-delay: 0.7s; height: 28px; }

    @@keyframes waveIdle {
        0%, 100% { transform: scaleY(0.5); opacity: 0.4; }
        50% { transform: scaleY(1); opacity: 1; }
    }

    .song-card.playing .wave-bar {
        animation: wavePlaying 0.5s ease-in-out infinite alternate;
        background: var(--accent-orange);
    }

    @@keyframes wavePlaying {
        0% { transform: scaleY(0.3); }
        100% { transform: scaleY(1.2); }
    }

    /* Quantum Audio Player */
    .audio-player {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6));
        backdrop-filter: blur(20px);
        border-top: 1px solid var(--glass-border);
        padding: 20px;
        transform: translateY(100%);
        transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        opacity: 0;
        z-index: 3;
    }

    .audio-player.show {
        opacity: 1;
        transform: translateY(0);
    }

    .audio-player::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, var(--primary-cyan), var(--primary-purple), var(--accent-orange));
        animation: progressGlow 3s ease-in-out infinite;
    }

    @@keyframes progressGlow {
        0%, 100% { opacity: 0.6; }
        50% { opacity: 1; }
    }

    .audio-controls {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 15px;
    }

    .audio-play-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid var(--primary-cyan);
        background: radial-gradient(circle, rgba(0, 255, 255, 0.2), transparent);
        color: var(--primary-cyan);
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .audio-play-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
    }

    .audio-info {
        flex: 1;
        color: #ffffff;
    }

    .audio-title {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 4px;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }

    .audio-artist {
        font-size: 12px;
        color: var(--primary-cyan);
        opacity: 0.8;
    }

    .audio-progress {
        width: 100%;
        height: 4px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 2px;
        position: relative;
        cursor: pointer;
        overflow: hidden;
    }

    .audio-progress::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 0%;
        background: linear-gradient(90deg, var(--primary-cyan), var(--secondary-green));
        border-radius: 2px;
        transition: width 0.3s ease;
    }

    .audio-progress:hover::before {
        box-shadow: 0 0 10px var(--primary-cyan);
    }

    .audio-player audio {
        display: none;
    }

    /* Neural Upload Interface */
    .sidebar {
        position: sticky;
        top: 30px;
        height: fit-content;
    }

    .upload-section {
        width: 100%;
        background: var(--glass-bg);
        border-radius: 30px;
        padding: 30px;
        backdrop-filter: blur(30px);
        border: 1px solid var(--glass-border);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
        overflow: hidden;
    }

    .upload-section::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle at 30% 70%,
            rgba(0, 255, 255, 0.1) 0%,
            transparent 50%
        );
        animation: uploadGlow 6s ease-in-out infinite alternate;
    }

    @@keyframes uploadGlow {
        0% { transform: rotate(0deg) scale(1); }
        100% { transform: rotate(180deg) scale(1.1); }
    }

    .upload-title {
        font-size: 24px;
        font-weight: 700;
        background: linear-gradient(45deg, var(--primary-cyan), var(--primary-purple));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
        text-align: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 2;
    }

    .file-upload-zone {
        position: relative;
        margin-bottom: 25px;
        z-index: 2;
    }

    .file-input {
        width: 100%;
        padding: 20px;
        border-radius: 20px;
        border: 2px dashed var(--glass-border);
        background: rgba(255, 255, 255, 0.02);
        color: #ffffff;
        text-align: center;
        cursor: pointer;
