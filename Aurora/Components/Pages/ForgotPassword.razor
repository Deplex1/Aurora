@page "/forgotpassword"
@using DBL
@using Models

<div class="forgot-container">
    <h2>Forgot Password?</h2>
    <p>Enter your email and we'll send you a reset link.</p>

    <input type="email" class="input" placeholder="Enter your email" @bind="email" />
    <button class="btn" @onclick="SendResetLink">Send Reset Link</button>

    @if (!string.IsNullOrEmpty(message))
    {
        <p>@message</p>
    }
</div>

@code {
    private string email = string.Empty;
    private string message = string.Empty;

    private async Task SendResetLink()
    {
        try
        {
            ListenerDB db = new ListenerDB();
            string token = Guid.NewGuid().ToString("N"); // generate token
            DateTime expiration = DateTime.Now.AddMinutes(30);

            int saved = await db.SaveResetTokenAsync(email, token, expiration);

            if (saved != 0)
            {
                string resetLink = $"https://localhost:7232/resetpassword?token={token}";

                // TODO: Send email here
                Console.WriteLine($"Reset link: {resetLink}");

                message = "A reset link has been sent to your email!";
            }
            else
            {
                message = "Email not found.";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
    }
}
