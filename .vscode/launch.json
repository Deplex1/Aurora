{
    // VS Code launch configurations for debugging the Aurora web app.
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch (Aurora)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Open Vivaldi",
            "program": "${workspaceFolder}/Aurora/bin/Debug/net8.0/Aurora.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Aurora",
            "stopAtEntry": false,
            "console": "internalConsole",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}